<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exhibition"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <LinearLayout
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/title">

            <TextView
                android:id="@+id/category_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginRight="13dp" />

            <TextView
                android:id="@+id/category_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오프라인 전시"
                android:layout_marginRight="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginRight="13dp" />

            <TextView
                android:id="@+id/category_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온라인 전시" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/category">

            <TextView
                android:id="@+id/category_detail_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginRight="13dp" />

            <TextView
                android:id="@+id/category_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료"
                android:layout_marginRight="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginRight="13dp" />

            <TextView
                android:id="@+id/category_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유료"
                android:layout_marginRight="13dp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/category_detail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>